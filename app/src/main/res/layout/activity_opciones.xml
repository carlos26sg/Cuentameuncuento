<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Opciones">

    <Button
        android:id="@+id/btn_atras_opciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:paddingRight="8dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_opciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:layout_weight="8"
        android:paddingStart="8dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/btn_atras_opciones"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_seleccion_idioma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="48dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_atras_opciones" />

    <Spinner
        android:id="@+id/sp_banderas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="end"
        android:layout_marginStart="76dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/diseny_spinner"
        app:layout_constraintStart_toEndOf="@+id/txt_seleccion_idioma"
        app:layout_constraintTop_toBottomOf="@+id/btn_atras_opciones" />

</androidx.constraintlayout.widget.ConstraintLayout>