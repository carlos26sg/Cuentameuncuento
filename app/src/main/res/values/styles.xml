<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/diseny_spinner</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <!--Estilo para dar efecto de sombra a las palabras del cuento-->
    <style name="SombraLetras">
        <item name="android:paddingLeft">2px</item>
        <item name="android:paddingBottom">2px</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">2.6</item>
        <item name="android:shadowRadius">3.2</item>
    </style>
</resources>